<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 class="text-center w-100">Create a New Order</h1>
      <form action="/orders" method="POST" class="mx-auto">
        <div class="form-group">
          <label class="form-label" for="order-id">Order ID:</label>
          <input class="form-control" id="order-id" type="text" name="order[id]">
        </div>
        <div class="form-group">
          <label class="form-label" for="date">Date:</label>
          <input class="form-control" id="date" type="text" name="order[date]">
        </div>
        <div class="form-group">
          <label class="form-label" for="status">Order Status:</label>
          <input class="form-control" id="status" type="text" name="order[status]">
        </div>

        <div>
          <div class="form-group">
            <label class="form-label" for="client-name">Name:</label>
            <input class="form-control" id="client-name" type="text" name="client[name]">
          </div>
          <div class="form-group">
            <label class="form-label" for="client-address">Address:</label>
            <input class="form-control" id="client-address" type="text" name="client[address]">
          </div>
          <div class="form-group">
            <label class="form-label" for="client-city">City:</label>
            <input class="form-control" id="client-city" type="text" name="client[city]">
          </div>
          <div class="form-group">
            <label class="form-label" for="client-zip">ZIP code:</label>
            <input class="form-control" id="client-zip" type="text" name="client[zip]">
          </div>
          <div class="form-group">
            <label class="form-label" for="client-phone">Phone number:</label>
            <input class="form-control" id="client-phone" type="text" name="client[phone]">
          </div>
          <div class="form-group">
            <label class="form-label" for="client-email-address">Email address:</label>
            <input class="form-control" id="client-email-address" type="text" name="client[email]">
          </div>
          <div class="form-group">
              <label class="form-label" for="client-company">Company:</label>
            <input class="form-control" id="client-company" type="text" name="client[company]">
          </div>
          <div class="form-group">
            <label class="form-label" for="client-comments">Comments:</label>
            <input class="form-control" id="client-comments" type="text" name="client[comments]">
          </div>
        </div>






        <div class="form-group">
          <button class="btn btn-lg btn-default btn-primary btn-block" type="submit" name="button">Submit!</button>
        </div>
      </form>
    </div>
  </div>
<% include ../partials/footer %>
